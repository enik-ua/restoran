<p id="notice"><%= notice %></p>

<h1>Menu</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu.each do |menu| %>
      <tr>
        <td><%= menu.name %></td>
        <td><%= menu.section %></td>
        <td><%= link_to 'Show', controller: "menu", action: "show", id: menu %></td>
        <td><%= link_to 'Edit', controller: "menu", action: "edit", id: menu %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Menu', controller: "menu", action: "new" %>
