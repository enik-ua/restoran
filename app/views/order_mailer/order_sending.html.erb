<h1>Orders</h1>

<p>
  <strong>Number:</strong>
  <%= @order.number %>
</p>

<p>
  <strong>User:</strong>
  <%= @order.user %>
</p>

<p>
  <strong>Comment:</strong>
  <%= @order.comment %>
</p>

<% if @order.sent == true %>
<p>
  <strong>Sent: yes</strong>
</p>
<% else %>
<p>
  <strong>Sent: no</strong>
</p>
<% end %>

<h2>Content</h2>
<table>
  <thead>
    <tr>
      <th>Dish:</th>
      <th>Number:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order.order_contents.each do |content| %>
      <tr>
        <td><%= content.menu.name %></td>
        <td><%= content.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
